<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="articleAnchorPane" prefHeight="768.0" prefWidth="824.0" stylesheets="@css/article-view.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.smyk.servicedeskfrontend.controller.ArticleViewController">
    <Label layoutX="14.0" layoutY="8.0" text="Article">
        <font>
            <Font size="24.0" />
        </font>
    </Label>
    <VBox layoutX="62.0" layoutY="76.0" prefHeight="650.0" prefWidth="700.0" spacing="10" styleClass="article-view">
        <Label fx:id="titleLabel" styleClass="article-title" text="Title" />
        <Label fx:id="descriptionLabel" styleClass="article-description" text="Description" />
        <Label fx:id="createdByLabel" styleClass="article-author" text="CreatedBy" />
        <Label fx:id="updatedByLabel" styleClass="article-author" text="UpdatedBy" />
        <Label fx:id="attachmentLabel" styleClass="article-attachment" text="AttachmentFiles" />
      <Button fx:id="pdfButton" mnemonicParsing="false" text="OPEN PDF" />
      <Label fx:id="commentsLabel" styleClass="article-attachment" text="Comments" />

        <VBox fx:id="commentsBox" spacing="5" />
    </VBox>
</AnchorPane>
